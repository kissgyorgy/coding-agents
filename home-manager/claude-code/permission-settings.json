{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(cat:*)",
      "Bash(rg:*)",
      "Bash(git:*)",
      "Bash(ls:*)",
      "Bash(uv:*)",
      "Bash(ruff:*)",
      "Bash(nixfmt:*)",
      "Read",
      "Write",
      "Search",
      "Fetch",
      "WebFetch",
      "Edit",
      "mcp__context7"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/command-validator.py"
          }
        ]
      }
    ]
  }
}
